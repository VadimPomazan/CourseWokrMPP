<!DOCTYPE html>
<html>
<head>
  <title>CoursWorkMpp</title>
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
  <%= javascript_importmap_tags %>
</head>

<body>
<div class="container">
  <ul>
    <% if user_signed_in? %>
      <li>
        <%= button_to 'Logout', destroy_user_session_path, method: :delete, class: 'logout-button' %>
      </li>
      <% if current_user.profile.present? %>
        <li>
          <%= link_to 'My Profile', profile_path(current_user.profile) %>
        </li>
        <li>
          <%= link_to 'View Analyses', analyses_path %>
        </li>
      <% else %>
        <li>
          <%= link_to 'Create Profile', new_profile_path %>
        </li>
      <% end %>
    <% else %>
      <li><%= link_to 'Sign Up', new_user_registration_path %></li>
      <li><%= link_to 'Login', new_user_session_path %></li>
    <% end %>
  </ul>
  <%= yield %>
</div>
</body>
</html>
