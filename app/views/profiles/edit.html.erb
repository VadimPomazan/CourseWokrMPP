<div class="block_form">
  <h2 class="block_form__title">Editing Profile</h2>
  <%= form_with(model: @profile) do |form| %>
    <% if @profile.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(@profile.errors.count, "error") %> prohibited this profile from being saved:</h2>

        <ul>
          <% @profile.errors.full_messages.each do |error| %>
            <li><%= error %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= form.label :first_name, style: "display: block" %>
      <%= form.text_field :first_name %>
    </div>

    <div class="field">
      <%= form.label :last_name, style: "display: block" %>
      <%= form.text_field :last_name %>
    </div>

    <div class="field">
      <%= form.label :patronym, style: "display: block" %>
      <%= form.text_field :patronym %>
    </div>

    <div class="field">
      <%= form.label :tel, style: "display: block" %>
      <%= form.text_field :tel %>
    </div>

    <div class="field">
      <%= form.label :address, style: "display: block" %>
      <%= form.text_field :address %>
    </div>

    <div class="field">
      <%= form.label :date_of_birth, style: "display: block" %>
      <%= form.date_field :date_of_birth %>
    </div>

    <div class="field last-field field-select">
      <%= form.label :gender, style: "display: block" %>
      <%= form.select :gender, ['male', 'female'], prompt: "Select gender" %>
    </div>

    <div class="actions">
      <%= form.submit %>
    </div>
  <% end %>
</div>