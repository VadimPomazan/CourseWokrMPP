<div class="block__info">
  <div class="info__first-line">
    <h1 class="info__title">Yours Orders</h1>

    <%= button_to 'Create Order', orders_path, method: :post %>
  </div>


<div class="info__list">
  <% @orders.each do |order| %>
    <div class="info__item">
      <h2 class="item__subtitle"><%= link_to "Order ##{order.id}", order_path(order), style: "text-decoration: none; color: #1d3124;"%></h2>
      <div class="item__price">
        <p class="price__data"><%= order.total_price %> cu</p>
      </div>
    </div>
  <% end %>
</div>
</div>