<div class="block__info">
  <div class="info__first-line">
    <h1 class="info__title"><%= t('appointments.order_appointments') %> #<%= @appointment.order_id %></h1>

    <% if @appointment.scheduled? %>
      <%= button_to t('actions.cancel'), cancel_appointment_path(@appointment), method: :patch, data: { confirm: 'Are you sure?' } %>
    <% end %>
  </div>
  <div class="info__item">
    <h2 class="item__title"><%= t('appointments.info') %></h2>
    <p class="item__description">
      <%= t('structure.family_member') %>: <strong><%= @appointment.family_member.family_member_name %></strong>
    </p>
    <p class="item__description">
      <%= t('structure.full_name') %>: <strong><%= @appointment.family_member.person.full_name %></strong>
    </p>
    <p class="item__description">
      <%= t('structure.analysis_date') %>:
      <strong><%= @appointment.analysis_datetime %></strong>
    </p>
    <div class="item__price">
      <h3 class="item__subtitle" >
        <%= @appointment.status %>
      </h3>
    </div>
  </div>
</div>
