<p style="color: green"><%= notice %></p>

<h1>Analyses</h1>

<%= form_with(url: analyses_path, method: "get") do %>
  <div>
    <%= text_field_tag :search, params[:search], placeholder: "Search by name" %>
    <%= submit_tag "Search" %>
  </div>
<% end %>

<div id="analyses">
  <% @analyses.each do |analysis| %>
    <%= render analysis %>
    <p>
      <%= link_to "Show this analysis", analysis %>
    </p>
  <% end %>
</div>

<% if current_user.role == "doctor" %>
  <%= link_to "New analysis", new_analysis_path %>
<% end %>
