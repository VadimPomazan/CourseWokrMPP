<div class="block_form">
  <h1 class="block_form__title"><%= t('menu.sign_up') %></h1>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label t('profile.email') %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.label t('profile.password') %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>

    <div class="field">
      <%= f.label t('profile.confirm') %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

<!--    <div class="field last-field field-select">-->
      <%#= f.label :role %>
      <%#= f.select :role, User::ROLES %>
<!--    </div>-->

    <h2 class="block_form__subtitle"><%= t('profile.info') %></h2>
    <%= f.fields_for :profile do |pf| %>
      <div class="field">
        <%= pf.label t('profile.first_name') %>
        <%= pf.text_field :first_name %>
      </div>

      <div class="field">
        <%= pf.label t('profile.second_name') %>
        <%= pf.text_field :last_name %>
      </div>

      <div class="field">
        <%= pf.label t('profile.patronym') %>
        <%= pf.text_field :patronym %>
      </div>

      <div class="field">
        <%= pf.label t('profile.tel') %>
        <%= pf.text_field :tel %>
      </div>

      <div class="field">
        <%= pf.label t('profile.address') %>
        <%= pf.text_field :address %>
      </div>

      <div class="field">
        <%= pf.label t('profile.birth_date') %>
        <%= pf.date_field :date_of_birth %>
      </div>

      <div class="field last-field field-select">
        <%= pf.label t('profile.gender') %>
        <%= pf.select :gender, [t('gender.male'), t('gender.female')], prompt: t('actions.select') %>
      </div>
    <% end %>
    <div class="actions">
      <%= f.submit t('menu.sign_up') %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>